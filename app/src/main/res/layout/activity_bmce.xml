<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".BMCE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView android:layout_width="match_parent" android:layout_weight="100" android:layout_height="wrap_content" tools:layout_editor_absoluteX="1dp" tools:layout_editor_absoluteY="1dp" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <Button android:id="@+id/btn1" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="sources of energy" android:layout_marginTop="5dp" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn2" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:paddingLeft="36dp" android:text="fuels and combustion" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn3" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:paddingLeft="36dp" android:text="pin, cotters &amp; knuckle joints" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn4" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:paddingLeft="40sp" android:text="keys &amp; splines" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn5" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="shafts, collars &amp; eccentrics" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn6" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:paddingLeft="40sp" android:text="couplings &amp; Clutches" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn7" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:paddingLeft="40sp" android:text="bearings" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn8" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="gears" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn9" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="springs" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn10" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="lubricants" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn11" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="d.c. circuits" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn12" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="theorems of d.c. circuits" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn13" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="volatage and current sources" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn14" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="electromagnetic induction" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn15" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="batteries" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn16" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="fundamentals of a.c. circuits" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn17" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="polyphase system" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
            <Button android:id="@+id/btn18" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"  android:paddingLeft="40sp" android:text="various types of power plants" android:fontFamily="@font/choco" android:textSize="25sp" android:textColor="@color/black" app:backgroundTint="#D6D6D6" style="bold"/>
        </LinearLayout>
    </ScrollView>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            app:adSize="BANNER"
            app:adUnitId="@string/ad_unit_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>