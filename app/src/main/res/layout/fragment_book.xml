<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/slide"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="200dp"
                    android:layout_height="165dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="2.5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/mech"
                    android:paddingTop="20dp"
                    android:background="@drawable/rounded_button1"
                    android:text="Mechanical Engg."
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/choco"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#1266A8"
                    android:textSize="16sp"
                    android:backgroundTint="#D1ACFD"
                  />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="200dp"
                    android:layout_height="165dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button1"
                    android:fontFamily="@font/choco"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/electric"
                    android:paddingTop="20dp"
                    android:text="Electrical Engg."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#1266A8"
                    android:textSize="16sp"
                    android:backgroundTint="#D1ACFD"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_below="@+id/lay1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="164dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_button1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/civil"
                    android:fontFamily="@font/choco"
                    android:paddingTop="20dp"
                    android:text="Civil Engg."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#1266A8"
                    android:textSize="16sp"
                    android:backgroundTint="#D1ACFD"
                    />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="164dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="165dp"
                    android:background="@drawable/rounded_button1"
                    android:fontFamily="@font/choco"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="20dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/syllabus"
                    android:text="Syllabus"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#1266A8"
                    android:textSize="16sp"
                    android:backgroundTint="#D1ACFD"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="164dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="28dp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button1"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/quiz"
                    android:fontFamily="@font/choco"
                    android:text="Previous Year Paper"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#1266A8"
                    android:textSize="16sp"
                    android:backgroundTint="#D1ACFD"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>